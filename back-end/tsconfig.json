{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "ES2022",  // ou "esnext"
    "module": "NodeNext", // ou "ESNext"
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}